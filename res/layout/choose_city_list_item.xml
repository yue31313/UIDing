        android:paddingLeft="10dip"
        android:background="#88ffffff" />

    <GridView
        android:id="@+id/choose_list_item_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="3" >
    </GridView>

</LinearLayout>